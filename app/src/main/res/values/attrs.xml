<?xml version="1.0" encoding="utf-8"?>

    <!--
    Part of a recent library used for FastScrolling in a RecyclerView (since RecycleView does not
    have the same fastscroll functionality as a ListView)

     https://github.com/danoz73/RecyclerViewFastScroller
 -->

<resources>

    <declare-styleable name="AbsRecyclerViewFastScroller">
        <attr name="fast_scroller_layout" format="reference" />
        <attr name="barColor" format="color|reference" />
        <attr name="barBackground" format="reference" />
        <attr name="handleColor" format="color|reference" />
        <attr name="handleBackground" format="reference" />
    </declare-styleable>

    <declare-styleable name="AbsSectionIndicator">
        <attr name="section_indicator_layout" format="reference" />
    </declare-styleable>

    <declare-styleable name="SectionTitleIndicator">
        <attr name="textColor" format="color|reference" />
        <attr name="backgroundColor" format="color|reference" />
    </declare-styleable>

</resources>